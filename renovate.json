{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true,
    "branchTopic": "lock-file-maintenance-{{baseBranch}}"
  },
  "forkProcessing": "enabled",
  "baseBranches": ["dev", "master"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchBaseBranches": ["dev"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchBaseBranches": ["master"],
      "automerge": false
    },
    {
      "matchUpdateTypes": ["major"],
      "automerge": false
    },
    {
      "matchBaseBranches": ["dev"],
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": true
    },
    {
      "matchBaseBranches": ["master"],
      "matchUpdateTypes": ["lockFileMaintenance"],
      "automerge": false
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["node"],
      "matchFileNames": ["Makefile"],
      "updateTypes": ["major", "minor", "patch"],
      "additionalBranchPrefix": "update-node-docker-",
      "branchTopic": "{{depName}}-{{newVersion}}",
      "enabled": true
    }
  ],
  "customManagers": [
    {
      "description": "Update Node.js version in Makefile",
      "customType": "regex",
      "fileMatch": ["^Makefile$"],
      "matchStrings": ["node:(?<currentValue>\\d+\\.\\d+\\.\\d+)"],
      "depNameTemplate": "node",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "automergeType": "pr",
  "automergeStrategy": "auto",
  "automergeSchedule": ["at any time"]
}